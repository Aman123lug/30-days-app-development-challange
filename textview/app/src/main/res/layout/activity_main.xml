<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pic"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:height="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Name"
        android:textSize="30dp"

        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Once upon a time,
a curious mind embarked on a journey to explore the world of data science.
Little did they know that this path would lead to a passion for machine learning and deep learning,
evidenced by projects like the Image to Recipe generator that still leave onlookers in awe."
            android:textSize="15dp" />
    </ScrollView>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView

        android:id="@+id/textView2"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textSize="15dp"

        android:text="But this individual's love for data science was not limited to just creating projects
         -they wanted to share their knowledge and help others grow in their own journeys. With that in mind, they built a community of like-minded individuals where they could provide access to the best resources and offer support to anyone facing challenges.
"/>
    </ScrollView>


</LinearLayout>